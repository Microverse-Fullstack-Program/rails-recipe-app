<div class="form-wrapper">
  <%= form_with model: @recipe_food, url: recipe_recipe_food_path(@recipe, @recipe_food) do |f| %>
    <!-- Form fields for editing a RecipeFood -->
    <div  class="form-group">
      <%= f.label :food_id, "Food" %>
      <%= f.collection_select :food_id, @foods, :id, :name, prompt: "Select a food", class: 'form-control' %>
    </div>

    <div  class="form-group">
      <%= f.label :quantity %>
      <%= f.number_field :quantity, autofocus: true, autocomplete: "quantity", class: 'form-control' %>
    </div>

      <%= f.submit "Save Change", class: "btn btn-secondary" %>

  <% end %>
</div
