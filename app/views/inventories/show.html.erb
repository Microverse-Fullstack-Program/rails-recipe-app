<section class="inventory-food">
  <div style="justify-content: center; display: flex;">
    <h1 style="font-size: 2rem; margin-top: 15px;">Inventory Details</h1>
  </div>

  <h2 class = "fs-4 fw-bold"><%= @inventory.name %></h2>
  <p class="fs-5"><%= @inventory.description %></p>

  <div class="add-btn">
    <%= link_to 'Add Food', new_inventory_inventory_food_path(inventory_id: @inventory.id)%>
  </div>

  <hr/>

  <% if @inventory.inventory_foods.empty? %>
    <h3 style="color: blue; margin-top: 35px;">
      No food added to this iventory yet.
    </h3>
  <% else %>
      <table class="table table-striped table-ligth">
        <thead>
          <tr>
            <th>#</th>
            <th>Food</th>
            <th>Quantity</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @inventory.inventory_foods.each_with_index do |inventory_food, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= inventory_food.food.name %></td>
              <td><%= inventory_food.quantity %></td>
              <td>
                <%= button_to 'Delete', inventory_inventory_food_path(@inventory, inventory_food), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  <% end %>
</section>
