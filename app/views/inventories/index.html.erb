<div id="inventories">
  <div class="list-heading">
    <h1>Inventories List</h1>
    <div class="add-btn">
      <%= link_to "Add Inventory", new_inventory_path, data: { turbo_frame: "add_inventory_modal"} %>
    </div>
  </div>

  <hr>

  <div class="list-inventories">
    <% if @inventories.empty?%>
      <h2 style="color: blue; margin-top: 45px;">
        There are no inventories in the database for the user.
      </h2>
    <% else %>
      <p style="color: green">
        <% if notice == "Inventory was successfully created." %>
          <%= notice %>
        <% end %>
      </p>

      <% @inventories.each do |inventory|%>
          <div class="container my-4">
            <div class="row border border-secondary-subtle border-2 p-3 mb-3">
              <div class="col-4">
                <%= link_to inventory.name, inventory, class: 'nav-link fs-4 fw-bold'%>
                <% if inventory.user == current_user %>
                  <%= button_to "Delete", inventory_path(inventory), method: :delete, data: { confirm: "Are you sure you want to delete this inventory?" }, class: 'btn btn-danger my-2 fs-5 p-1 custom-button-width' %>
                <% end %>
              </div>

              <div class="col-8">
                <p class="fs-5"><%= inventory.description%></p>
              </div>
            </div>
          </div>
      <% end %>
    <% end %>
  </div>
</div>

